{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":timezone(Asia/Tokyo)",
    "config:base",
    ":pinDependencies",
    ":pinDevDependencies",
    "schedule:monthly"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "excludePackageNames": [
        "@vitest/browser",
        "vitest",
        "webdriverio"
      ]
    },
    {
      "matchPackageNames": [
        "@vitest/browser",
        "vitest",
        "webdriverio"
      ],
      "groupName": "vitest"
    }
  ]
}
